<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow android:background="#000000" android:layout_margin="2dp">
            <TextView android:layout_weight="2" android:layout_width="0dp" android:layout_height="wrap_content" android:background="#ffffff" android:gravity="center" android:layout_margin="0.5dp" android:id="@+id/tv1" android:text="0000" android:textSize="25dp"/>
            <TextView android:layout_weight="4" android:layout_width="0dp" android:layout_height="wrap_content" android:background="#ffffff" android:gravity="center" android:layout_margin="0.5dp" android:id="@+id/tv2" android:text="000000000" android:textSize="25dp"/>
            <TextView android:layout_weight="6" android:layout_width="0dp" android:layout_height="wrap_content" android:background="#ffffff" android:gravity="center" android:layout_margin="0.5dp" android:id="@+id/tv3" android:text="00000000000000" android:textSize="25dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
